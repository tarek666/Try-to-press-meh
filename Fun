<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.2/jquery.min.js"></script>
<script>
$(document).ready(function(){
	var $p = $('p');
    $("div").hover( function(){
        $(this).css("background-color", "red");
        }, function(){
        $(this).css("background-color", "black");
        $(this).animate({right:'250px'});
	$(this).animate({top:'250px'});
	$(this).animate({left:'250px'});
	$(this).animate({width: "30px",height: '30px', left: "-6", top: "-6", opacity:"0"});
        $(this).animate({width: "80px",height: '60px', left: "14", top: "20", opacity:"1"});
        $(this).animate({width: "30px",height: '30px', left: "-6", top: "-6", opacity:"0"});
	$(this).animate({width: "800px",height: '600px', left: "1114", top: "200", opacity:"1"});
});

});
</script>
